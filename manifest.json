{
    "name": "Request History",
    "description": "Stores all request performed by your browser.",
    "version": "0.1.0",
    "manifest_version": 2,
    "icons": {
        "16": "/images/icon16.png",
        "32": "/images/icon32.png",
        "48": "/images/icon48.png",
        "128": "/images/icon128.png"
    },
    "background": {
        "page": "pages/background.html"
    },
    "browser_action": {
        "default_popup": "pages/popup.html"
    },
    "permissions": [
        "tabs",
        "<all_urls>",
        "webRequest",
        "storage",
        "unlimitedStorage"
    ],
    "content_security_policy": "script-src 'self' https://unpkg.com https://momentjs.com; object-src 'self'"
}